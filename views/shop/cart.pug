extends ../layouts/main-layout.pug

block content
  main
    if products.length > 0
      ul
        each product in products
          li
            p #{ product.title } (#{ product.qty })
            form(
              method="post"
              action="/delete-cart-item"
            )
              input(
                name="id"
                type="hidden"
                value=product.id
              )
              button.btn(type="submit") Delete
    else
      h1 No Products in Cart!
