extends ../layouts/main-layout.pug

block styles
  link(rel="stylesheet" href="/css/forms.css")
  link(rel="stylesheet" href="/css/product.css")

block content
  main
    form.product-form(
      method = "post"
      action = edit
        ? "/admin/edit-product/" + product.id
        : "/admin/add-product"
    )
      div.form-control
        label(for="title") Title
        input#title(
          type="text"
          name="title"
          value = edit ? product.title : ''
        )

      div.form-control
        label(for="imageUrl") Image URL
        input#imageUrl(
          type="text"
          name="imageUrl"
          value = edit ? product.imageUrl : ''
        )

      div.form-control
        label(for="price") Price
        input#price(
          type="number"
          name="price"
          value = edit ? product.price : ''
        )

      div.form-control
        label(for="description") Description
        textarea#description(
          type="text"
          name="description"
        ) #{ edit ? product.description : '' }

      if edit
        button.btn(type="submit") Update Product
      else 
        button.btn(type="submit") Add Product
